---
interface Props {
  titulo: string;
}

const { titulo } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{titulo}</title>
  </head>
  <body class="bg-slate-700 text-white mx-auto max-w-[1200px] p-10">
    <slot />
  </body>
</html>

---
import Layout from '../Layout/Layout.astro';
import TarjetaPokemones from '../components/pokemones/TarjetaPokemones.astro';
import type { RespuestaListaPokemon } from '../interfaces/respuesta-lista-pokemon';

const resp = await fetch('https://pokeapi.co/api/v2/pokemon/');
const data = (await resp.json()) as RespuestaListaPokemon;
---

<Layout titulo="Pokedex | Inicio">
  <h1 class="text-4xl text-yellow-500 font-bold pb-20 uppercase text-center">Listado de Pok√©mones</h1>
  <section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
    {data.results.map(({ name, url }) => <TarjetaPokemones url={url} nombre={name} />)}
  </section>
</Layout>
